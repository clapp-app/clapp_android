<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>


        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>


        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>


        <item name="colorSecondary">#ff3C3C3C</item>
        <item name="colorSecondaryVariant">#ff3C3C3C</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
